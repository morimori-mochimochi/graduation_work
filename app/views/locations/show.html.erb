<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center md-6">
    <h1 class="text-2xl font-bold"><%= @location.name %>の詳細</h1>
  </div>

  <%# 更新後にリダイレクトされた場合のflashメッセージを表示 %>
  <% if flash[:notice] %>
    <div role="alert" class="alert alert-success mb-4">
      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
      <span><%= flash[:notice] %></span>
    </div>
  <% end %>

  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title">場所の情報</h2>
      <div class="space-y-2">

        <%# strongはブラウザに「ここ大事」と伝える %>
        <p><strong>名前:</strong> <%= @location.name %></p>
        <p><strong>住所:</strong> <%= @location.address %></p>
        <p><strong>緯度:</strong> <%= @location.lat %></p>
        <p><strong>経度:</strong> <%= @location.lng %></p>
      </div>
    </div>
  </div>

  <div class="mt-6 flex items-center space-x-2">
    <%= link_to '編集', edit_location_path(@location), class: "btn-warning" %>
    <%= button_to '削除', @location, method: :delete, data: { turbo_confirm: '本当に削除しますか？' }, class: "btn btn-error" %>
    <%= link_to '一覧に戻る', locations_path, class: "btn btn-ghost" %>
  </div>
</div>
