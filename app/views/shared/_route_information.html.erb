<div id="routeContainer"></div>

<template id="route-info-template">
  <div class="cute-title" style="padding: 10px;">
    <h4 style="margin: 0 0 10px 0; font-size: 1.1em; color: #333;">ルート情報</h4>
    <div style="display: flex; justify-content: center; gap: 20px;">
      <div>
        <span style="font-size: 0.9em; color: #666;">総移動距離</span><br>
        <span class="route-total-distance" style="font-size: 1.2em; font-weight: bold;"></span>
      </div>
      <div>
        <span style="font-size: 0.9em; color: #666;">所要時間</span><br>
        <span class="route-total-duration" style="font-size: 1.2em; font-weight: bold;"></span>
      </div>
      <div>
        <% if defined?(mode) && mode == walk %>
          <span style="font-size: 0.7em; color: #666;">推定消費カロリー(体重50kg想定)</span><br>
          <span class="calorie-burned" style="font-size: 1.2em; font-weight: bold;"></span>
        <% else %>
          <span style="font-size: 0.7em; color: #666;">推定ガソリン消費量(燃費15km/L想定)</span><br>
          <span class="gas-consumption" style="font-size: 1.2em; font-weight: bold;"></span>
        <% end %>
    </div>
  </div>
</template>
